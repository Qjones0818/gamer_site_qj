<div class="page-header">
  <h1>
    Hyped games
    <a href="/hyped_games/new" class="btn btn-lg btn-success">New Hyped game</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Videogame</th>
        <th>User</th>
        <th>Actions</th>
      </tr>

      <% @hyped_games.each do |hyped_game| %>
      <tr>
        <td><%= hyped_game.videogame_id %></td>
        <td><%= hyped_game.user_id %></td>
        <td>
          <a href="/hyped_games/<%= hyped_game.id %>" class="btn btn-primary">Show</a>
          <a href="/hyped_games/<%= hyped_game.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_hyped_game/<%= hyped_game.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
