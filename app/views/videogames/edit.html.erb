<!-- Validation failure messages -->
<% if @videogame.errors.any? %>
  <% @videogame.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Videogame #<%= @videogame.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_videogame/<%= @videogame.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for title -->
      <div class="form-group">
        <label for="title" class="control-label">
          Title
        </label>

        <input type="text" id="title" name="title" placeholder="Title" class="form-control" value="<%= @videogame.title %>">
      </div>

      <!-- Label and input for description -->
      <div class="form-group">
        <label for="description" class="control-label">
          Description
        </label>

        <textarea id="description" name="description" placeholder="Description" class="form-control" rows="3"><%= @videogame.description %></textarea>
      </div>

      <!-- Label and input for image_url -->
      <div class="form-group">
        <label for="image_url" class="control-label">
          Game Cover
        </label>

        <input type="text" id="image_url" name="image_url" placeholder="Image url" class="form-control" value="<%= @videogame.image_url %>">
      </div>

      <button class="btn btn-warning">
        Update Videogame
      </button>
      or
      <a href="/videogames/<%= @videogame.id %>">Cancel</a>
    </form>
  </div>
</div>
