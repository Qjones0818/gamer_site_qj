<div class="page-header">
  <h1>
    Videogames
    <a href="/videogames/new" class="btn btn-lg btn-success">New Videogame</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Image url</th>
        <th>Actions</th>
      </tr>

      <% @videogames.each do |videogame| %>
      <tr>
        <td><%= videogame.title %></td>
        <td><%= videogame.description %></td>
        <td><%= videogame.image_url %></td>
        <td>
          <a href="/videogames/<%= videogame.id %>" class="btn btn-primary">Show</a>
          <a href="/videogames/<%= videogame.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_videogame/<%= videogame.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
